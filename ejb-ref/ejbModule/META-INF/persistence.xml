<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="refPU" transaction-type="JTA">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>com.dahg.project.ref.model.impl.Departamento</class>
		<class>com.dahg.project.ref.model.impl.Articulo</class>
		<class>com.dahg.project.ref.model.impl.Barrio</class>
		<class>com.dahg.project.ref.model.impl.Canton</class>
		<class>com.dahg.project.ref.model.impl.Caserio</class>
		<class>com.dahg.project.ref.model.impl.Colonia</class>
		<class>com.dahg.project.ref.model.impl.Idioma</class>
		<class>com.dahg.project.ref.model.impl.Municipio</class>
		<class>com.dahg.project.ref.model.impl.Nacionalidad</class>
		<class>com.dahg.project.ref.model.impl.Parentesco</class>
		<class>com.dahg.project.ref.model.impl.Profesion</class>
		<class>com.dahg.project.ref.model.impl.Rol</class>
		<class>com.dahg.project.ref.model.impl.TipoMarginacion</class>
		<class>com.dahg.project.ref.model.impl.Usuario</class>
		<class>com.dahg.project.ref.model.impl.UsuarioRol</class>
		<class>com.dahg.project.ref.model.parameters.Logic</class>
		<class>com.dahg.project.ref.model.parameters.Texto</class>
		<class>com.dahg.project.ref.model.parameters.Numero</class>
		<class>com.dahg.project.ref.model.parameters.Parametro</class>
		<class>com.dahg.project.ref.model.impl.AutorizacionVista</class>
		<exclude-unlisted-classes>true</exclude-unlisted-classes>
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
			<property name="hibernate.transaction.jta.platform" value="org.hibernate.service.jta.platform.internal.SunOneJtaPlatform" />
			<property name="hibernate.transaction.factory_class" value="org.hibernate.transaction.CMTTransactionFactory" />
			
		</properties>
	</persistence-unit>
</persistence>
